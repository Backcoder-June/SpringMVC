package member;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class MemberMain {

	
	public static void main(String[] args) {
		
		ApplicationContext fac = new ClassPathXmlApplicationContext("member/member.xml");

		MemberDAO dao= (MemberDAO)fac.getBean("dao"); 
		
		MemberDTO dto1= (MemberDTO)fac.getBean("dto1"); 
		MemberDTO dto2= (MemberDTO)fac.getBean("dto2");

		
		//dao.setDto(dto2);  이것도 container 로 옮긴다. 
		
		boolean result = dao.selectMember();
		if(result == true) {
			System.out.println(dto1.getName() + "님 로그인 성공");
		}else {
			dao.insertmember(); 
		}
		
		
		
		
		
		
		
		
		
		
	}
}
